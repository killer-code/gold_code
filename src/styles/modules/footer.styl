.footer
    background: __bg-dark-grey

    &__wrap
        padding: 72px 0 20px
        justify-content: space-between
        align-items: flex-start

        @media mq-mobile
            padding: 20px 0
            flex-direction: column
            align-items: center

    &__block-left
        @media mq-tablet
            display: none

    &__block-right
        width: 100%

    &__row
        justify-content: space-between
        padding-left: 20px

        @media mq-mobile
            flex-direction: column
            align-items: flex-start
            padding-left: 10px

    &__logo
        margin: 10px 5px 0 0

        @media mq-mobile
            margin: 20px

    &__line
        width: 1px
        height: 35px
        margin: 5px 17px 0 14px
        background: __white

        @media mq-mobile
            width: 100px
            height: 1px
            margin: 10px auto

    &__bottom
        color: __white
        font-size: 10px
        font-weight: 300
        font-style: normal
        line-height: inherit
        margin: 32px 0
        width: 99%;

        @media mq-mobile
            margin: 30px 0 0
        
        & > span 
            margin: 3px 0

    &__icon
        font-size: 13px
        margin-right: 8px

.author
    display: flex
    align-items: center
    padding: 7px 0

    & > img 
        width: 23px
        height: 39px

    & > figcaption 
        opacity: 0.8;
        color: __gold
        font-family: Ubuntu
        font-size: 12px
        font-weight: 300
        line-height: 16px
        white-space: nowrap
        margin-left: 10px

.social-list
    display: flex
    flex-wrap: nowrap

    &__item
        background-color: __white
        border-radius: 5px
        width: 25px
        height: 25px
        background-size: cover
        background-position: center
        margin: 0 5px

        &-vk
           background-image: url(../../assets/img/icons/vk.png)
        &-youtube
           background-image: url(../../assets/img/icons/youtube.png)
        &-insta
           background-image: url(../../assets/img/icons/instagram.png)
        &-ok
           background-image: url(../../assets/img/icons/ok.png)
