.footer
    background: __bg-dark-grey

    &__wrap
        padding: 72px 0 20px
        justify-content: space-between
        align-items: flex-start

    &__block-right
        width: 100%

    &__row
        justify-content: space-between
        padding-left: 20px

    &__line
        width: 1px
        height: 35px
        margin: 5px 17px 0 14px
        background: __white

    &__bottom
        color: __white
        font-size: 10px
        font-weight: 300
        font-style: normal
        line-height: inherit

.author
    display: flex
    align-items: center

    & > img 
        width: 23px
        height: 39px
        
    & > figcaption 
        opacity: 0.8;
        color: #ff6d14
        font-family: Ubuntu
        font-size: 12px
        font-weight: 300
        line-height: 16px
        white-space: nowrap
