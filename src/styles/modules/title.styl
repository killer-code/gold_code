.title
    margin: 40px 0

    &__line
        width: 100%
        height: 1px
        background-color: __yellow

    &__text
        position: absolute
        margin-top: 0
        background: __white
        padding: 0 27px
        left: -35px

        @media mq-mobile
            left: 0

        &-width-100
            width: 100%

    &__link
        position: absolute
        margin-top: 0
        background: __white
        font-size: 20px
        right: 0
        text-decoration: none

        @media mq-mobile
            right: 50px

        &-text
            border-bottom: 1px solid __yellow

            @media mq-mobile
                display: none

.news__title-mob
    display: none
    
    @media mq-mobile
        display: block
