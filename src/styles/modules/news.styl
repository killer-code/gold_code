.news
    padding-top: 30px
    max-width: 1160px

    &__img
        @media mq-mobile
            border-radius: 0
            width: 150px
            height: 150px
            shape-outside: border-box

        @media only screen and (max-width: 460px)
            float: none
            width: 210px
            height: 190px

    &__post
        margin-bottom: 43px

.post__img-outline
    outline: __yellow solid 3px
    outline-offset: -24px
